<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<init-param>
  		<param-name>cacheControl</param-name>
  		<param-value>max-age=0,public</param-value>
	</init-param>

	<display-name>HelloWorld Application</display-name>
	<description>
        This is a simple web application with a source code organization
        based on the recommendations of the Application Developer's Guide.
    </description>


	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>ebook.module.book.servlets.ImageServlet</servlet-class>
	</servlet>
 	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/img</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>book</servlet-name>
		<servlet-class>ebook.module.book.servlets.BookServlet</servlet-class>
	</servlet>
 	<servlet-mapping>
		<servlet-name>book</servlet-name>
		<url-pattern>/book</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>info</servlet-name>
		<jsp-file>/tmpl/info/index.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>info</servlet-name>
		<url-pattern>/info</url-pattern>
	</servlet-mapping>

	<jsp-config>
		<taglib>
			<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
			<taglib-location>/WEB-INF/tags/c.tld</taglib-location>
		</taglib>
	</jsp-config>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- <servlet> <servlet-name>home</servlet-name> <servlet-class>org.eclipse.jetty.servlet.DefaultServlet</servlet-class> 
		</servlet> <servlet-mapping> <servlet-name>home</servlet-name> <url-pattern>/*</url-pattern> 
		</servlet-mapping> -->

	<error-page>
        <location>/error.jsp</location>
    </error-page>
    
</web-app> 